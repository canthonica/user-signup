@app.route("/password", methods=['GET' 'POST'])
def passwords():
    password1 = request.form['password']
    if not len(password1) > 3 and not len(password1) <20:
        error = "Invalid Usernme. Please enter password between 3 and 20 characters"
        return redirect("/?error=" + error)

    else:
        return render_template("edit.html", password=password1)

    <form action="/password" method='post'>